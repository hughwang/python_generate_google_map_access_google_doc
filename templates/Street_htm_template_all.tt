<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>[% KML_NAME %]</title>
	<link href="src/style_all.css" rel="stylesheet" type="text/css" />

 <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
 <script src="[% XML_NAME %]" type="text/javascript"></script>
 <script type="text/javascript" src="src/markerwithlabel_all.js"></script>
 <script type="text/javascript">

 window.onresize = handleResize;

   function initMap() {
     handleResize();
     var latLng = new google.maps.LatLng( [% LATITUDE %],[% LONGITUDE %]);

     var map = new google.maps.Map(document.getElementById('map'), {
       zoom: 10,
       center: latLng,
       mapTypeId: google.maps.MapTypeId.ROADMAP
     });
     var ctaLayer = new google.maps.KmlLayer({
        url: '[% WEB_URL_FOR_STORED_MAP %]/[% KML_NAME %]'
     });
     ctaLayer.setMap(map);
     setMarkers(map,markers);
     
     google.maps.event.addListener(ctaLayer, 'status_changed', function () {
         //console.log('kml loaded:');
         google.maps.event.addListenerOnce(map, 'zoom_changed', function () {
             //console.log('zoom_changed:');
              map.setZoom(10);
             map.setCenter(new google.maps.LatLng( [% LATITUDE %],[% LONGITUDE %]));
	 });
    });
   };

 </script>
</head>
<body onload="initMap()">
[% STREET_NAME %]  <br>
  WebLink: <a href='[% WEB_URL_FOR_STORED_MAP %]/[% STREET_NAME %].htm'>[% WEB_URL_FOR_STORED_MAP %]/[% STREET_NAME %].htm</a>
 <ol>  
  [% FOREACH street IN streets  -%]
  <li>[% street %]</li>
  [%END%]
</ol>

  <div id="toolbar">
	</div>
	<div id="content">
		<div id="map-wrapper">
			<div id="map"></div>
		</div>
		<div id="sidebar">
			<ul id="sidebar-list">
			</ul>
		</div>
	</div>
	

 <div id="log"></div>
</body>
</html>
